{% extends "layout.njk" %}

{% block title %}
{{ title }}
{% endblock title %}

{% block main %}

<h1>{{ title }}</h1>

<ul>
  {% for book in bookList %}
  <li><a href={{book.url}}>{{book.title}}</a> by {{book.author.name}}</li>
  {% else %}
  <li>No books in list</li>
  {% endfor %}
</ul>

{% endblock main %}